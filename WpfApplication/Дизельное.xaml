<Window x:Class="WpfApplication.Дизельное"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Дизельное топливо" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="name" HorizontalAlignment="Left" Height="34" Margin="54,60,0,0" TextWrapping="Wrap" Text="дизельное топливо" VerticalAlignment="Top" Width="175"/>
        <TextBox x:Name="amount" HorizontalAlignment="Left" Height="30" Margin="55,149,0,0" TextWrapping="Wrap" Text="количество" VerticalAlignment="Top" Width="174"/>
        <TextBox x:Name="value" HorizontalAlignment="Left" Height="30" Margin="55,106,0,0" TextWrapping="Wrap" Text="Стоимость" VerticalAlignment="Top" Width="174"/>
        <Button x:Name="back" HorizontalAlignment="Left" Height="36" VerticalAlignment="Top" Width="51" Click="back_Click" Margin="451,12,0,0">
            <Image Source="1.png" Width="41" Height="26" />
        </Button>
        <Button x:Name="insert_in_check" Content="Добавить в чек" HorizontalAlignment="Left" Height="37" Margin="389,259,0,0" Click="insert_Click" VerticalAlignment="Top" Width="113"/>
    </Grid>
</Window>

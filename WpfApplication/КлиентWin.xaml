<Window x:Class="WpfApplication.КлиентWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication"
        mc:Ignorable="d"
        Title="Добавить клиента" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="name" HorizontalAlignment="Left" Height="37" Margin="64,68,0,0" TextWrapping="Wrap" Text="Имя клиента" VerticalAlignment="Top" Width="138"/>
        <Button x:Name="insert" Content="Добавить" HorizontalAlignment="Left" Height="27" Margin="87,244,0,0" VerticalAlignment="Top" Width="75" Click="button_Click" Grid.ColumnSpan="3"/>
        <Button x:Name="back" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="37" Click="back_Click" Margin="481,0,0,0">
            <Image Source="1.png" Width="37" Height="30" />
        </Button>
        <TextBox x:Name="number" HorizontalAlignment="Left" Height="35" Margin="64,18,0,0" TextWrapping="Wrap" Text="Номер карточки" VerticalAlignment="Top" Width="138"/>

    </Grid>
</Window>

<Window x:Class="WpfApplication.ТоварыWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Товар" Height="350" Width="525">
    <Grid>
        <Button x:Name="back" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="37" Click="back_Click" Margin="480,0,0,0">
            <Image Source="1.png" Width="37" Height="30" />
        </Button>
        <TextBox x:Name="value" HorizontalAlignment="Left" Height="59" Margin="23,161,0,0" TextWrapping="Wrap" Text="Стоимость" VerticalAlignment="Top" Width="329"/>
        <Button x:Name="insert_in_check" Content="Добавить в чек" HorizontalAlignment="Left" Height="24" Margin="413,285,0,0" VerticalAlignment="Top" Width="94" Click="button_Click"/>
        <ListBox x:Name="list_of_products" HorizontalAlignment="Left" Height="112" Margin="23,44,0,0" VerticalAlignment="Top" Width="329" >Список товаров</ListBox>
        <Button x:Name="insert_new_good" Content="Добавить товар" HorizontalAlignment="Left" Height="27" Margin="175,273,0,0" VerticalAlignment="Top" Width="114" Click="button1_Click"/>
        <Button x:Name="delete" Content="Удалить" HorizontalAlignment="Left" Height="26" Margin="396,110,0,0" VerticalAlignment="Top" Width="80" Click="button2_Click"/>

    </Grid>
</Window>

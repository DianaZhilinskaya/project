<Window x:Class="WpfApplication.УслугаWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Новая услуга" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="service_code" HorizontalAlignment="Left" Height="33" Margin="73,61,0,0" TextWrapping="Wrap" Text="Код услуги" VerticalAlignment="Top" Width="69"/>
        <TextBox x:Name="name" HorizontalAlignment="Left" Height="37" Margin="73,113,0,0" TextWrapping="Wrap" Text="Название услуги" VerticalAlignment="Top" Width="138"/>
        <TextBox x:Name="value" HorizontalAlignment="Left" Height="35" Margin="73,176,0,0" TextWrapping="Wrap" Text="Стоимость" VerticalAlignment="Top" Width="138"/>
        <Button x:Name="insert" Content="Добавить" HorizontalAlignment="Left" Height="27" Margin="87,244,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="back" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="37" Click="back_Click" Margin="480,0,0,0">
            <Image Source="1.png" Width="37" Height="30" />
        </Button>
    </Grid>
</Window>

<Window x:Class="WpfApplication.ЧекWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Чек" Height="350" Width="525">
    <Grid>
        <Menu HorizontalAlignment="Left" Width="517">
            <MenuItem Header="Топливо"  x:Name="mFuel" Click="mFile_Click" Width="99" Height="30">
                <MenuItem Header="_92 бензин"  x:Name="m92" Click="m92_Click" />
                <MenuItem Header="_95 бензин"  x:Name="m95" Click="m95_Click" />
                <MenuItem Header="_дизельное топливо"  x:Name="mdiesel" Click="mdiz_Click" />
            </MenuItem>
            <Button x:Name="goods" Content="Товары" Height="29" Width="82"  Click="tov_Click"/>
            <Button x:Name="services" Content="Услуги" Height="29" Width="82"  Click="usl_Click"/>
        </Menu>
        <Button x:Name="regular_customers" Content="Постоянные клиенты" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="128" Click="b_Click" Margin="313,30,0,0"/>
        <Button x:Name="back" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="37" Click="back_Click" Margin="480,0,0,0">
            <Image Source="1.png" Width="37" Height="20" />
        </Button>
        <TextBox x:Name="total_fuel" HorizontalAlignment="Left" Height="26" Margin="30,104,0,0" TextWrapping="Wrap" Text="Топливо*количесвто" VerticalAlignment="Top" Width="140"/>
        <TextBox x:Name="total_quantity_of_goods" HorizontalAlignment="Left" Height="27" Margin="30,159,0,0" TextWrapping="Wrap" Text="Товар*количесвто" VerticalAlignment="Top" Width="140"/>
        <TextBox x:Name="total_number_of_services" HorizontalAlignment="Left" Height="26" Margin="30,211,0,0" TextWrapping="Wrap" Text="Услуга*количесвто" VerticalAlignment="Top" Width="140"/>
        <TextBox x:Name="discount" HorizontalAlignment="Left" Height="30" Margin="30,262,0,0" TextWrapping="Wrap" Text="Скидка постоянного клиента" VerticalAlignment="Top" Width="140"/>
        <Button x:Name="calculate" Content="Рассчитать" HorizontalAlignment="Left" Height="39" Margin="313,60,0,0" VerticalAlignment="Top" Width="128" Click="button_Click"/>
        <Button x:Name="printing" Content="Печать" HorizontalAlignment="Left" Height="26" Margin="313,99,0,0" VerticalAlignment="Top" Width="128" Click="button1_Click"/>
        <TextBox x:Name="customer_name" HorizontalAlignment="Left" Height="30" Margin="30,50,0,0" TextWrapping="Wrap" Text="Имя и фамилия клиента" VerticalAlignment="Top" Width="213"/>
        <Button x:Name="add_customer" Content="Добавить клиента" HorizontalAlignment="Left" Height="30" Margin="313,125,0,0" VerticalAlignment="Top" Width="128"/>
        <Calendar HorizontalAlignment="Left" Height="199" Margin="290,160,0,-38.2" VerticalAlignment="Top" Width="187"/>
        <TextBox x:Name="amount_of_fuels" HorizontalAlignment="Left" Height="26" Margin="201,104,0,0" TextWrapping="Wrap" Text="Количесвто" VerticalAlignment="Top" Width="75" TextChanged="textBox_TextChanged"/>
        <TextBox x:Name="amount_of_goods" HorizontalAlignment="Left" Height="26" Margin="201,159,0,0" TextWrapping="Wrap" Text="Количесвто" VerticalAlignment="Top" Width="75" TextChanged="textBox_TextChanged"/>
        <TextBox x:Name="amount_of_services" HorizontalAlignment="Left" Height="26" Margin="201,211,0,0" TextWrapping="Wrap" Text="Количесвто" VerticalAlignment="Top" Width="75" TextChanged="textBox_TextChanged"/>

    </Grid>
</Window>
